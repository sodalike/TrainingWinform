        <TextBox Margin="196,77,52,23.6" TextWrapping="Wrap" FontSize="15"/>
        <Label>
            <local:Car Speed="30.0" Color ="Blue">
                <local:Car.Driver>
                    <local:Human FirstName="changsu" HasDrivingLicense="True"/>
                </local:Car.Driver>
            </local:Car>
        </Label>        
    </Grid>
</Page>
